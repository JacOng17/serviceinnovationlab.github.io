#!/bin/bash

set -euv


# We skip this because it's a redirect, to a site that doesn't pass
SKIP="projects/msd-family-services-directory-api/index.html"

FILES=$(find "./_site" | grep html | grep -v "$SKIP")

for file in $FILES
do
  echo "============== checking $file"
  ./node_modules/.bin/pa11y-ci "$file" || exit 1
done